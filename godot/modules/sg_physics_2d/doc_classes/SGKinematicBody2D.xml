<?xml version="1.0" encoding="UTF-8" ?>
<class name="SGKinematicBody2D" inherits="SGCollisionObject2D" version="3.4">
	<brief_description>
		Kinematic physics body for SG Physics 2D.
	</brief_description>
	<description>
		Kinematic bodies are intended to be controlled directly by code (rather than physics forces).
	</description>
	<tutorials>
	</tutorials>
	<methods>
		<method name="get_floor_angle" qualifiers="const">
			<return type="int" />
			<argument index="0" name="up_direction" type="SGFixedVector2" default="null" />
			<description>
				Gets the angle between the up direction and the floor normal.
				The floor normal is only set after running [method move_and_slide].
			</description>
		</method>
		<method name="get_floor_normal" qualifiers="const">
			<return type="SGFixedVector2" />
			<description>
				Gets the floor normal.
				This is only set after running [method move_and_slide].
			</description>
		</method>
		<method name="get_slide_count" qualifiers="const">
			<return type="int" />
			<description>
				Gets the number of slides of the last move_and_slide call.
			</description>
		</method>
		<method name="is_on_ceiling" qualifiers="const">
			<return type="bool" />
			<description>
			</description>
		</method>
		<method name="is_on_floor" qualifiers="const">
			<return type="bool" />
