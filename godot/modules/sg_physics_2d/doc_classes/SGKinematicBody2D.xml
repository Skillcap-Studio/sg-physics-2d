			<return type="bool" />
			<description>
			</description>
		</method>
		<method name="move_and_collide">
			<return type="SGKinematicCollision2D" />
			<argument index="0" name="linear_velocity" type="SGFixedVector2" />
			<description>
			</description>
		</method>
		<method name="move_and_slide">
			<return type="SGFixedVector2" />
			<argument index="0" name="linear_velocity" type="SGFixedVector2" />
			<argument index="1" name="up_direction" type="SGFixedVector2" default="null" />
			<argument index="2" name="unused" type="bool" default="false" />
			<argument index="3" name="max_slides" type="int" default="4" />
			<argument index="4" name="floor_max_angle" type="int" default="51471" />
			<description>
			</description>
